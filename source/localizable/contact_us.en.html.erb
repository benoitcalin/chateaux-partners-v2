<div class="wrapper" style="background-image: linear-gradient(60deg, rgba(0,0,0,0.5), rgba(0,0,0,0.2)), url(<%= image_path 'fond_contact.jpg' %>)" alt="<%= t(:alternates)[:contact] %>">

  <div class="contact-container">

    <div class="row contact-height scroll-snap">

      <div class="col"></div>

      <div class="col-12 col-sm-10 col-md-8 col-lg-6">

        <div class="contact-form">
          <div class="contact-title">
            <h3><%= t(:contact)[:title] %></h3>
          </div>

          <div class="row">
            <div class='col-12 col-sm-6'>
              <%= partial 'templates/contact_us/infos' %>
            </div>
            <div class='col-12 col-sm-6'>
              <%= partial 'templates/contact_us/form' %>
            </div>
          </div>
        </div>
      </div>

      <div class="col"></div>

    </div>
  </div>
</div>

<div class='fixed'>
  <%= link_to t(:mentions), "/en/mentions.html", class: "mentions" %>
</div>

<% t(:wines).each_with_index do |e, i| %>

  <% if i.even? %>

    <div class='wines-cards'>

      <img src="<%= image_path e[:image] %>" alt="<%= e[:alt] %>" class="wines-image-hidden">

      <img src="<%= image_path e[:image] %>" alt="<%= e[:alt] %>" class="wines-image">

      <div class="wines-content-holder wines-bottom-border">
        <div class="wines-title-container">
          <h3><%= e[:title] %></h3>
        </div>

        <div class="wines-text-container">
          <p><%= e[:content] %></p>
        </div>

        <div class="wines-icon">
          <a href="mailto:contact@chateaux-partners.com">
            <%= partial '/images/plus-square-regular.svg' %>
          </a>
        </div>
      </div>

    </div>

  <% else %>

    <div class='wines-cards'>

      <img src="<%= image_path e[:image] %>" alt="<%= e[:alt] %>" class="wines-image-hidden">

      <div class="wines-content-holder wines-right-border">
        <div class="wines-title-container">
          <h3><%= e[:title] %></h3>
        </div>

        <div class="wines-text-container">
          <p><%= e[:content] %></p>
        </div>

        <div class="wines-icon">
          <a href="mailto:contact@chateaux-partners.com">
            <%= partial '/images/plus-square-regular.svg' %>
          </a>
        </div>
      </div>

      <img src="<%= image_path e[:image] %>" alt="<%= e[:alt] %>" class="wines-image">

    </div>

  <% end %>

<% end %>


